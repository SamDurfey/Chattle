<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ui.SignUpActivity"
    android:background="@color/colorPrimary">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chattle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="60dp"
        android:textColor="#eaeaea"
        android:textStyle="bold"
        android:id="@+id/textView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/emailEntry"
        android:hint="Email"
        android:textAlignment="center"
        android:selectAllOnFocus="true"
        android:textColorHint="@color/abc_tint_switch_track"
        android:background="#eaeaea"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/userNameEntry"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/passwordEntry"
        android:layout_alignEnd="@+id/passwordEntry" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/passwordEntry"
        android:hint="Password"
        android:textAlignment="center"
        android:selectAllOnFocus="true"
        android:background="#eaeaea"
        android:padding="10dp"
        android:textColorHint="@color/abc_tint_switch_track"
        android:password="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/emailEntry"
        android:layout_alignRight="@+id/confirmPasswordEntry"
        android:layout_alignEnd="@+id/confirmPasswordEntry"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/confirmPasswordEntry"
        android:hint="Confirm Password"
        android:textAlignment="center"
        android:selectAllOnFocus="true"
        android:background="#eaeaea"
        android:padding="10dp"
        android:textColorHint="@color/abc_tint_switch_track"
        android:password="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/passwordEntry"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/signUpButton"
        android:layout_alignEnd="@+id/signUpButton" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userNameEntry"
        android:hint="User Name"
        android:textAlignment="center"
        android:selectAllOnFocus="true"
        android:background="#eaeaea"
        android:padding="10dp"
        android:textColorHint="@color/abc_tint_switch_track"
        android:password="false"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/emailEntry"
        android:layout_alignEnd="@+id/emailEntry"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:id="@+id/signUpButton"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#eaeaea" />
</RelativeLayout>
